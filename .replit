modules = ["nodejs-18", "web"]
run = "pnpm run dev"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "pnpm run dev"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5173
externalPort = 5173
exposeLocalhost = true

[workflows]
runButton = "Run Low Memory"

[[workflows.workflow]]
name = "Run"
author = 40873790
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd game-client && pnpm install && pnpm run dev"

[[workflows.workflow]]
name = "Run Low Memory"
author = 40873790
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd game-client && node --max-old-space-size=256 --optimize-for-size --gc-interval=100 node_modules/.bin/vite --host 0.0.0.0 --port 5000"
